#!/bin/zsh

export PATH="$PATH:${$(find ~/.local/bin -type d -printf %p:)%%:}"

PROMPT='%B%F{blue}ó°£‡ %F{green}%1~%f > %b'
HISTFILE=$XDG_DATA_HOME/zsh/histfile
HISTSIZE=1000000
SAVEHIST=1000000

export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_RUNTIME_DIR=/run/user/$UID

export EDITOR=nvim
export TERMINAL=alacritty
export BROWSER=app.zen_browser.zen
export OPENER=xdg-open

export XINITRC=$HOME/.config/x/xinitrc
export XAUTHORITY=$HOME/.cache/Xauthority

export CARGO_HOME="$XDG_DATA_HOME"/cargo
export RUSTUP_HOME="$XDG_DATA_HOME"/rustup

export MANPAGER='nvim +Man!'

export PYTHON_HISTORY=$XDG_STATE_HOME/python/history

export WINEPREFIX=$HOME/.local/wine

export QT_QPA_PLATFORM=wayland
export QT_QPA_PLATFORMTHEME=gtk3

export FZF_DEFAULT_COMMAND='rg --files --glob "!{music,games,.git,.gitignore,.roots,.var,.cache,.local,.config,.ssh}/*"'
export FZF_DEFAULT_OPTS='--ansi --color=16 --style full:sharp --info inline-right --layout=reverse --walker-skip=music,games,.git,.gitignore,.roots,.var,.cache,.local,.config,.ssh'
FZF_COMPLETION_OPTS='--preview "ls -A --group-directories-first --color=always $(echo $(pwd)/$(echo {})); cat {} 2>/dev/null"'
FZF_COMPLETION_TRIGGER=
FZF_ALT_C_COMMAND='fd -t d -H --exclude 'music' --exclude 'games' --exclude '.git' --exclude '.gitignore' --exclude '.roots' --exclude '.var' --exclude '.cache' --exclude '.local' --exclude '.config' --exclude '.ssh''
FZF_ALT_C_OPTS='--preview "ls -A --group-directories-first --color=always $(echo $(pwd)/$(echo {})) 2>/dev/null; cat {} 2>/dev/null"'
